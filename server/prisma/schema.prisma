// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Profile {
  username String @id @unique

  display_name String
  welcome_phrase String
  description String
  profile_picture String

  @@map("profiles")
}